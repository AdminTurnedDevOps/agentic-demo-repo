# This is a template for secrets
# DO NOT commit actual secrets to version control
#
# If you need to store client secrets for token acquisition in your test clients,
# create a secrets.yaml file (which is .gitignored) with your actual values.

apiVersion: v1
kind: Secret
metadata:
  name: entra-oauth-config
  namespace: mcp-demo-entra
type: Opaque
stringData:
  # Your Entra ID Tenant ID
  tenant-id: "YOUR_TENANT_ID"

  # Your Entra ID Application (Client) ID
  client-id: "YOUR_CLIENT_ID"

  # Client secret (if using client credentials flow)
  # For device code flow or browser-based auth, this may not be needed
  client-secret: "YOUR_CLIENT_SECRET"
