# This is a template for secrets
# DO NOT commit actual secrets to version control
#
# If you need to store client secrets for token acquisition in your test clients,
# create a secrets.yaml file (which is .gitignored) with your actual values.

apiVersion: v1
kind: Secret
metadata:
  name: auth0-oauth-config
  namespace: mcp-demo-auth0
type: Opaque
stringData:
  # Your Auth0 Domain (e.g., your-tenant.us.auth0.com)
  auth0-domain: "YOUR_AUTH0_DOMAIN"

  # Your Auth0 API Identifier (audience)
  api-identifier: "YOUR_API_IDENTIFIER"

  # Client ID for your Auth0 Application
  client-id: "YOUR_CLIENT_ID"

  # Client secret (if using client credentials or confidential clients)
  # For SPA or public clients, this may not be needed
  client-secret: "YOUR_CLIENT_SECRET"
